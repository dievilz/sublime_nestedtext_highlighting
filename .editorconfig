# editorconfig.org
root = true

[*]
indent_style = tab
# indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false


#=== Global settings for all files ====

[*.bat]
end_of_line = crlf

[*.el]
indent_style = space

[*.json]
indent_style = tab
indent_size = 4

[composer.json]
indent_style = space
indent_size = 4

[LICENSE]
indent_style = space

[*.nt]
indent_style = space
indent_size = 3

[*.xml]
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 3


#======== Repo custom files ===========

[*.sublime-syntax]
indent_style = space
indent_size = 2
